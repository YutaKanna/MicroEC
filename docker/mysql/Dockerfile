#--------------------------------------------------------------------------
# Image Setup
#--------------------------------------------------------------------------
FROM mysql:5.7

#--------------------------------------------------------------------------
# Update and Upgrade
#--------------------------------------------------------------------------
RUN apt-get update -y \
    && apt-get upgrade -y

#--------------------------------------------------------------------------
# Copy files
#--------------------------------------------------------------------------
COPY docker/mysql/etc/mysql/conf.d/my.cnf /etc/mysql/conf.d/my.cnf

#--------------------------------------------------------------------------
# Add init files
#--------------------------------------------------------------------------
ADD "docker/mysql/docker-entrypoint-initdb.d/001_create_testing_db.sql" "/docker-entrypoint-initdb.d"
